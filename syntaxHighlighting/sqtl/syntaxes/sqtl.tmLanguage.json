{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SQTL Programming Language",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#parentheses"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#functions"
		}
	],
	"repository": 
	{
		"strings":{
			"name":"string.quoted.double.sqtl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name":"constant.character.escape.sqtl",
					"match": "\\\\."
				}
			]
		},"#parentheses":{
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "(\\(|\\)|\\[|\\])"

				}
			]
		},
		
		"operators":{
			"patterns": [
				{
					"match": "(\\s|\\(|\\[)?(true|false|obj|subj|pred)(\\s|\\)|\\])",
					"name": "variable.parameter"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.sqtl",
				"match": "(\\s|\\(|\\[)?(and|or|where)(\\s|\\)|\\])"
			}]
		},
		"functions":{
			"patterns": [{
				"name":"entity.name.function",
				"match" : "(filter|map|union|join|add|length|startWith)"
			}]
		}		
	},
	"scopeName": "source.sqtl"
}